@model NEST.Models.ContentSection

@{
    ViewBag.Title = "CreateSection";
    Layout = "~/Views/Shared/_LayoutNEST.cshtml";
}

<h2>Create Section</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Create New Content Section</legend>
        @Html.Raw(ViewBag.Error)
        <div class="editor-label">
            @Html.LabelFor(model => model.Header)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Header)
            @Html.ValidationMessageFor(model => model.Header)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.URL)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.URL)
            @Html.ValidationMessageFor(model => model.URL)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CreationDate)
        </div>
        <div class="editor-field">
            <input type="text" id="datepicker" name="CreationDate">
            @Html.ValidationMessageFor(model => model.CreationDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ContentTypeId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("ContentTypeId", String.Empty)
            @Html.ValidationMessageFor(model => model.ContentTypeId)
        </div>

        <p>
            <input type="submit" value="Create" id="CreateSection" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
