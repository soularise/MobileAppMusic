@model NEST.Models.ContentSection

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutNEST.cshtml";
}

<h2>Edit Section</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Content Section</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Header)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Header)
            @Html.ValidationMessageFor(model => model.Header)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.URL)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.URL)
            @Html.ValidationMessageFor(model => model.URL)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CreationDate)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.CreationDate)
            @Html.HiddenFor(model => model.CreationDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ContentTypeId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("ContentTypeId", String.Empty)
            @Html.ValidationMessageFor(model => model.ContentTypeId)

        </div>

        <p>
            <input type="submit" value="Save" /> | @Html.ActionLink("Delete", "../ContentMaintenance/Delete", new { id = Model.Id })
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "../ContentMaintenance")
</div>
