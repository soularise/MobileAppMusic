<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" >
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Carlos Gimenez - @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/theme-default/css/Reset.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/theme-default/css/ContributionForm.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/theme-default/css/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/theme-default/css/slider.css")" rel="stylesheet" type="text/css" media="screen" />
    <link href="@Url.Content("~/Scripts/nivo-slider/nivo-slider.css")" rel="stylesheet" type="text/css" media="screen" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/theme-default/js/site.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/theme-default/js/contribution.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/nivo-slider/jquery.nivo.slider.pack.js")" type="text/javascript" ></script>
    <script type="text/javascript">
        $(window).load(function () {
            $('#slider').nivoSlider();
        });
    </script>
    @if (!string.IsNullOrWhiteSpace(NEST.Common.LandingConfig.Current.GoogleAnalyticsAccount))
    {
        <script type="text/javascript">
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', '@NEST.Common.LandingConfig.Current.GoogleAnalyticsAccount']);
            _gaq.push(['_trackPageview']);

            (function () {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();
        </script>
    }
</head>
<body>
    <div id="ContainerDiv">
        <div id="leftbg"></div><div id="rightbg"></div>
        <div id="center">
            <div id="header">
                <div id="headerJoinBox">

                    <div id="MainJoinFields">
                        <div id="fieldInputFName"><input id="FirstName" type="text" maxlength="50" value="First Name" onfocus="if(this.value == 'First Name') { this.value = ''; }" /></div>
                        <div id="fieldInputLName"><input id="LastName" type="text" maxlength="50" value="Last Name" onfocus="if(this.value == 'Last Name') { this.value = ''; }" /></div>
                        <div id="fieldInputEmail"><input id="Email" type="text" maxlength="50" value="Email Address" onfocus="if(this.value == 'Email Address') { this.value = ''; }" /></div>
                        <div id="fieldInputZip"><input id="ZipCode" type="text" maxlength="10" value="Zip Code" onfocus="if(this.value == 'Zip Code') { this.value = ''; }" /></div>
                    </div>

                    <div id="joincontainer">
                        <div id="joinleft"><img src="@Url.Content("~/Content/theme-default/images/final_landing_on_05.jpg")" /></div>
                        <div id="joingo"><img src="@Url.Content("~/content/theme-default/images/blank.gif")" id="BtnJoin" /></div>
                        <div id="joinright"><img src="@Url.Content("~/Content/theme-default/images/final_landing_on_07.jpg")" /></div>
                    </div>
                    <script type="text/javascript">
                        $('#BtnJoin').click(function () {
                            var em = $('#Email').val();
                            if (!_UValidEmail(em)) {
                                alert('Enter a valid email address');
                                return false;
                            }
                            var fin = $('#FirstName').val();
                            var lan = $('#LastName').val();
                            var zip = $('#ZipCode').val();
                            $.post('/join', { FirstName: fin, LastName: lan, Email: em, ZipCode: zip });
                            alert('Thank you for joining the campaign. You will hear from us soon.');
                        });
                    </script>
                </div>
                <div id="subBar">
                    <div id="socialIcons">
                        <div id="follow"><img src="@Url.Content("~/content/theme-default/images/blank.gif")" /></div>
                        <div id="fb"><a href="@Url.Content("~/facebook")"><img src="@Url.Content("~/content/theme-default/images/blank.gif")"  /></a></div>
                        <div id="tw"><a href="@Url.Content("~/twitter")"><img src="@Url.Content("~/content/theme-default/images/blank.gif")"  /></a></div>
                        <div id="yt"><a href="@Url.Content("~/youtube")"><img src="@Url.Content("~/content/theme-default/images/blank.gif")"  /></a></div>
                        <div id="fl"><a href="@Url.Content("~/flickr")"><img src="@Url.Content("~/content/theme-default/images/blank.gif")"  /></a></div>
                    </div>
                </div>
            </div>

            <div id="BodyContent">
                <div id="leftColumn">
                    <div id="sidenav">
                        <div id="img1"><a href="@Url.Content("~/")"><img src="@Url.Content("~/content/theme-default/images/blank.gif")"  /></a></div>
                        <div id="img2"><a href="@Url.Content("~/news/")"><img src="@Url.Content("~/content/theme-default/images/blank.gif")"  /></a></div>
                        <div id="img3"><a href="@Url.Content("~/join")"><img src="@Url.Content("~/content/theme-default/images/blank.gif")"  /></a></div>
                        <div id="img4"><a href="@Url.Content("~/about")"><img src="@Url.Content("~/content/theme-default/images/blank.gif")"  /></a></div>
                        <div id="img5"><a href="@Url.Content("~/accomplishments")"><img src="@Url.Content("~/content/theme-default/images/blank.gif")"  /></a></div>
                        <div id="img6"><a href="@Url.Content("~/multimedia")"><img src="@Url.Content("~/content/theme-default/images/blank.gif")"  /></a></div>
                        <div id="img7"><a href="@Url.Content("~/contribute")"><img src="@Url.Content("~/content/theme-default/images/blank.gif")"  /></a></div>
                        <div id="img8"><a href="@Url.Content("~/volunteer")"><img src="@Url.Content("~/content/theme-default/images/blank.gif")"  /></a></div>
                        <div id="img9"><a href="@Url.Content("~/contact")"><img src="@Url.Content("~/content/theme-default/images/blank.gif")"  /></a></div>
                    </div>
                    <div id="CampaignVideos">
                        <img src="@Url.Content("~/Content/theme-default/images/CampaignVideosTitle.jpg")" /><br /><br />
                        @RenderPage("~/views/shared/_PartialVideoRoll.cshtml")
                    </div>
                </div>
                <div id="contentColumn">
                    <div id="imageslider">
                        <div id="wrapper">
                            <div class="slider-wrapper theme-default">
                                <div class="ribbon"></div>
                                <div id="slider" class="nivoSlider">
                                    <a href="@Url.Content("~/news")"><img src="@Url.Content("~/Content/theme-default/images/sliderimg1.jpg")" alt=""  /></a>
                                    <a href="@Url.Content("~/news")"><img src="@Url.Content("~/Content/theme-default/images/sliderimg2.jpg")" alt=""  /></a>
                                    <a href="@Url.Content("~/news")"><img src="@Url.Content("~/Content/theme-default/images/sliderimg3.jpg")" alt=""  /></a>
                                </div>
                            </div>
	                    </div>
                    </div>
                    <div id="mainContent">
                    @RenderBody()
                    </div>
                </div>           
            </div>
            <div id="sitefooter">
                    <ul>
                    <li><a href="@Url.Content("~/news/")">news</a></li>
                    <li>|</li>
                    <li><a href="@Url.Content("~/join")">join</a></li>
                    <li>|</li>
                    <li><a href="@Url.Content("~/about")">about</a></li>
                    <li>|</li>
                    <li><a href="@Url.Content("~/accomplishments")">accomplishments</a></li>
                    <li>|</li>
                    <li><a href="@Url.Content("~/multimedia")">multimedia</a></li>
                    <li>|</li>
                    <li><a href="@Url.Content("~/contribute")">contribute</a></li>
                    <li>|</li>
                    <li><a href="@Url.Content("~/volunteer")">volunteer</a></li>
                    <li>|</li>
                    <li><a href="@Url.Content("~/contact")">contact</a></li>
                    </ul>
                    <br />
                <div id="disclaimer">
                    2011 All Right Reserved<br />
                    Friends of Carlos Gimenez. PO BOX 140194 Miami, Fl 33114<br />
                    Paid for by Friends of Carlos Gimenez, Miami Dade, Fl
                </div>
            </div>  
        </div>
      
    </div>
    
</body>
</html>
