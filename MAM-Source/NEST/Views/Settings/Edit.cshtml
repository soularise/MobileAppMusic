@model NEST.Models.Configuration

@{
    ViewBag.Title = "Edit Settings";
}

<h2>Edit Settings</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Configuration</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.GoogleAnalytics_ID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GoogleAnalytics_ID)
            @Html.ValidationMessageFor(model => model.GoogleAnalytics_ID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TwitterHandle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TwitterHandle)
            @Html.ValidationMessageFor(model => model.TwitterHandle)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FacebookURL)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FacebookURL)
            @Html.ValidationMessageFor(model => model.FacebookURL)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.GooglePlusURL)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GooglePlusURL)
            @Html.ValidationMessageFor(model => model.GooglePlusURL)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ContributionEngine)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ContributionEngine)
            @Html.ValidationMessageFor(model => model.ContributionEngine)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Settings View", "Index")
</div>
